# License Server environment variables (development defaults)
# Copy this to your deployment secrets manager and change values for production.

# App
APP_ENV=development
DEBUG=True
PROJECT_NAME=MyRhythmNexus License Server
API_V1_STR=/api/v1

# Database (SQLite for local dev). Use a PostgreSQL URL in production.
LICENSE_DATABASE_URL=sqlite:///./license_server.db

# Security
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_SECRET_KEY
ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Offline JWT token expiry (days)
OFFLINE_TOKEN_EXPIRE_DAYS=7

# Rate limit for license validation endpoint (slowapi format, e.g. "5/minute")
LICENSE_VALIDATE_RATE=5/minute

# RSA key file paths (relative to project root or absolute)
# For development these point to files created by `generate_keys.py`.
PRIVATE_KEY_PATH=license_server/private.pem
PUBLIC_KEY_PATH=license_server/public.pem

# Example root .env for MyRhythmNexus
# Copy this file to `.env` at repo root and fill real values (do NOT commit your real .env)

# Database (Postgres recommended for production)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/myrhythmnexus

# Security (REPLACE in production with a secure random string)
# Generate with: python -c "import secrets,base64; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
SECRET_KEY=REPLACE_ME_WITH_STRONG_SECRET
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# App/Server
HOST=0.0.0.0
PORT=8000

# CORS origins (comma separated)
CORS_ORIGINS=http://localhost:8000,https://yourdomain.com,app://rhythm-nexus

# Admin / bootstrap
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin123

# License server endpoint (local dev)
RHYTHM_NEXUS_LICENSE_SERVER_URL=http://localhost:8001/api/v1
# Copy to .env and set values
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/myrhythmnexus
SECRET_KEY=replace-with-secure-key

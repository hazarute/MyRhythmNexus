# DATABASE_URL=sqlite+aiosqlite:///./dev.db
# PostgreSQL Bağlantısı (Lütfen kendi şifrenizi ve portunuzu kontrol edin)
# Format: postgresql+asyncpg://KULLANICI:SIFRE@HOST:PORT/DB_ADI
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/myrhythmnexus

FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin123

# License Server
RHYTHM_NEXUS_LICENSE_SERVER_URL=http://localhost:8001/api/v1

# Security (backend) - replace in production
# Generate with: python -c "import secrets,base64; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
SECRET_KEY=REPLACE_ME_WITH_STRONG_SECRET
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Server
HOST=0.0.0.0
PORT=8000

# CORS origins (comma separated)
CORS_ORIGINS=http://localhost:8000,https://yourdomain.com,app://rhythm-nexus

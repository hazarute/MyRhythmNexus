# Web UI Dockerfile - Static file server
FROM nginx:alpine

# Copy static files
COPY backend/web/static /usr/share/nginx/html/static
COPY backend/web/templates /usr/share/nginx/html/templates

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Expose port
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]